<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/negro"
    android:gravity="center"
    android:orientation="vertical" >

            
        <TextView
        android:id="@+id/lblDiaMovimiento"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Datos de Usuario"
        android:typeface="monospace"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blanco" />

    <LinearLayout
        android:id="@+id/viewMovimiento"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/gris"
        android:gravity="center"
        android:orientation="horizontal" >
        <ImageView
        android:id="@+id/imageTipoMovimiento"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/btn_mas" />
        <TextView
        android:id="@+id/lblMovimiento"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Datos de Usuario"
        android:typeface="monospace"
        android:textSize="12dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/negro" />
        <Button
        android:id="@+id/btnVer"
        android:layout_width="20dp"
        android:layout_height="32dp"   
        android:background="@drawable/btn_ver"/>	
        </LinearLayout>
        
 </LinearLayout>